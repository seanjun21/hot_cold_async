  },
  "homepage": "https://github.com/atbang/redux_hot_or_cold#readme",
  "devDependencies": {
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "chokidar-cli": "^1.2.0",
    "eslint": "^3.1.1",
    "eslint-plugin-react": "^5.2.2",
    "webpack": "^1.13.1"
  },
  "dependencies": {
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2"
  }
}
